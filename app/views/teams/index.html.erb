<div class="grid_16">
  <h3>Teams</h3>
   <% if can? :manage, Team %>
    <p>
      <%= link_to "New Team", new_team_path %>
    </p>
  <% end %>
  <p>Points and OPP need to be recalculated to factor in free agents playing for a team member</p>
<div class="clear"></div>
<div class="grid_4 alpha">
  <h6><%= sortable "name" %></h6>
</div>
<div class="grid_3">
  <h6><%= sortable "opp", "OPP" %></h6>
</div>
<div class="grid_3">
  <h6><%= sortable "points" %></h6>
</div>
<div class="grid_3">
  <h6><%= sortable "wins" %></h6>
</div>
<div class="grid_3 omega">
  <h6><%= sortable "losses" %></h6>
</div>
<div class="clear"></div>
<% @teams.each_with_index do |team| %>
  <div class="grid_4 alpha">
    <p>
      <%= link_to team.name, team_path(team) %>
    </p>
  </div>
   <div class="grid_3">
    <p>
      <%= number_with_precision team.opp %>
    </p>
  </div>
  <div class="grid_3">
    <p>
      <%= team.points %>
    </p>
  </div>
 
  <div class="grid_3">
    <p>
      <%= team.wins %>
    </p>
  </div>
  <div class="grid_3 omega">
    <p>
      <%= team.losses %>
    </p>
  </div>
  <div class="clear"></div>
<% end %>
</div>
