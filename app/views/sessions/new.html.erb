<h2>Login</h2>
<div class="grid_16">
  <%= form_tag sessions_path do %>
    <%= field_set_tag "Credentials" do %>
      <p>
        <%= label_tag :login, "Username or Email Address" %><br />
        <%= text_field_tag :login, params[:login], :class => "title" %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, :class => "text" %>
      </p>
      <p><%= submit_tag "Log in" %></p>
    <% end -%>
  <% end -%>
</div>
