<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% @player.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br />
    <%= f.select :team_id, Team.all.collect {|t| [ t.name, t.id ] }, { :include_blank => "None" } %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>
  <% if can? :assign_users, @player %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.select :user_id, User.all.collect { |u| [ u.username, u.id ] }, { :include_blank => "None" } %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
