<h2>Forgot Password</h2>
<%= form_tag password_resets_path, html: { method: :post } do %>
  <%= field_set_tag do %>
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email, nil, :class => 'title' %>
    </p>
    <p>
      <%= submit_tag "Reset Password" %>
    </p>
  <% end -%>
<% end -%>
